<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_row_background">

    <ImageView
        android:id="@+id/ivProgram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_launcher" />

    <!-- <com.saba.igc.org.extras.EllipsizingTextView
    android:linksClickable="true"
    currently, we don't need this class but might need in future.-->
    <TextView
        android:id="@+id/tvProgramDescription"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignStart="@+id/tvProgramTitle"
        android:layout_alignEnd="@+id/tvProgramTitle"
        android:layout_below="@+id/tvProgramTitle"
        android:maxLines="3"
        android:text="@string/program_description"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvProgramTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivProgram"
        android:layout_toEndOf="@+id/ivProgram"
        android:text="@string/program_title"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textStyle="bold"/>

</RelativeLayout>


