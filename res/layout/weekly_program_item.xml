<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/tvProgramTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/program_time" 
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvProgramDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvProgramTime"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvProgramTime"
        android:layout_marginTop="3dp"
        android:text="@string/program_detail" 
        android:layout_marginBottom="10dp"
        android:linksClickable="true"/>
</RelativeLayout>
